# ========================================
# Documents Service Backend Environment Variables
# ========================================

# ========================================
# Server Configuration
# ========================================
NODE_ENV=development
PORT=3001
HOST=localhost

# ========================================
# Database Configuration
# ========================================
# MongoDB 연결 설정
MONGODB_URI=mongodb://localhost:27017/documents_service
MONGODB_URI_PROD=mongodb://your-production-mongodb-uri

# Redis 연결 설정 (캐싱, 세션, 실시간 기능용)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# ========================================
# Authentication & Security
# ========================================
# JWT 설정
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-secret-key
JWT_REFRESH_EXPIRES_IN=30d

# 암호화 키
ENCRYPTION_KEY=your-32-character-encryption-key
ENCRYPTION_IV=your-16-character-iv

# ========================================
# File Upload & Storage
# ========================================
# 파일 업로드 설정
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,ppt,pptx,txt,jpg,jpeg,png,gif,hwp

# 네트워크 드라이브 설정 (raidrive 등)
NETWORK_DRIVE_PATH=//your-network-drive-path
NETWORK_DRIVE_USERNAME=your-username
NETWORK_DRIVE_PASSWORD=your-password

# 클라우드 스토리지 설정 (선택사항)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=ap-northeast-2
AWS_S3_BUCKET=your-s3-bucket-name

# ========================================
# External Services
# ========================================
# 이메일 설정 (알림용)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@yourcompany.com

# 슬랙 웹훅 (알림용)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url

# Elasticsearch 설정 (검색용)
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_INDEX=documents

# ========================================
# AI Services (향후 연동용)
# ========================================
# OpenAI 설정
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4

# Claude 설정
CLAUDE_API_KEY=your-claude-api-key
CLAUDE_MODEL=claude-3-sonnet-20240229

# ========================================
# Logging & Monitoring
# ========================================
# 로그 레벨
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log
ERROR_LOG_FILE_PATH=./logs/error.log

# 모니터링 설정
ENABLE_METRICS=true
METRICS_PORT=9090

# ========================================
# Rate Limiting & Security
# ========================================
# API 요청 제한
RATE_LIMIT_WINDOW_MS=900000  # 15분
RATE_LIMIT_MAX_REQUESTS=100

# CORS 설정
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true

# ========================================
# Document Processing
# ========================================
# OCR 설정
ENABLE_OCR=true
TESSERACT_LANG=kor+eng

# 문서 변환 설정
ENABLE_DOCUMENT_CONVERSION=true
CONVERSION_TIMEOUT=300000  # 5분

# ========================================
# Development & Testing
# ========================================
# 테스트 설정
TEST_DATABASE_URL=mongodb://localhost:27017/documents_service_test
TEST_REDIS_URL=redis://localhost:6379/1

# 디버그 모드
DEBUG=false
DEBUG_LEVEL=info

# ========================================
# Performance & Caching
# ========================================
# 캐시 설정
CACHE_TTL=3600  # 1시간
ENABLE_CACHE=true

# 세션 설정
SESSION_SECRET=your-session-secret
SESSION_MAX_AGE=86400000  # 24시간

# ========================================
# Backup & Recovery
# ========================================
# 백업 설정
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # 매일 새벽 2시
BACKUP_PATH=./backups
BACKUP_RETENTION_DAYS=30

# ========================================
# Feature Flags
# ========================================
# 기능 토글
ENABLE_REAL_TIME_COLLABORATION=true
ENABLE_DOCUMENT_VERSIONING=true
ENABLE_APPROVAL_WORKFLOW=true
ENABLE_EXTERNAL_SHARING=true
ENABLE_ANALYTICS=true
ENABLE_TEMPLATE_MARKETPLACE=true

# ========================================
# Integration Settings
# ========================================
# 외부 시스템 연동 설정
ERP_API_URL=http://your-erp-system.com/api
ERP_API_KEY=your-erp-api-key

GROUPWARE_API_URL=http://your-groupware.com/api
GROUPWARE_API_KEY=your-groupware-api-key

# ========================================
# Localization
# ========================================
# 다국어 설정
DEFAULT_LOCALE=ko
SUPPORTED_LOCALES=ko,en,zh
TIMEZONE=Asia/Seoul

# ========================================
# Production Specific
# ========================================
# 프로덕션 전용 설정
SSL_ENABLED=false
SSL_KEY_PATH=./ssl/private.key
SSL_CERT_PATH=./ssl/certificate.crt

# 로드 밸런서 설정
TRUST_PROXY=true
PROXY_IPS=127.0.0.1,::1

# 헬스체크 설정
HEALTH_CHECK_ENDPOINT=/health
HEALTH_CHECK_TIMEOUT=5000 