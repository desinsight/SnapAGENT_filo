# Server Configuration
PORT=3003
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/task_manager
MONGODB_URI_TEST=mongodb://localhost:27017/task_manager_test

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password
EMAIL_FROM=noreply@taskmanager.com

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379

# External Service URLs (for future integrations)
CALENDAR_SERVICE_URL=http://localhost:3001
DOCUMENT_SERVICE_URL=http://localhost:3002
MESSENGER_SERVICE_URL=http://localhost:3004
NOTE_SERVICE_URL=http://localhost:3005

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/task-service.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
CORS_ORIGIN=http://localhost:3000
SESSION_SECRET=your_session_secret_here 